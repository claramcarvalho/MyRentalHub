@model RentalProperties.Models.EventInProperty

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>EventInProperty</h4>
<hr />
@if (ViewData["ErrorMessage"] != null)
{
    List<string> errors = (List<string>)ViewData["ErrorMessage"];
    foreach (string error in errors)
    {
        <div class="text-danger">
            @error
        </div>
    }
}
<div class="row"> 
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="PropertyId" class="control-label"></label>
                    <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId" id="PropertyId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ApartmentId" class="control-label"></label>
                    <select asp-for="ApartmentId" class ="form-control" asp-items="ViewBag.ApartmentId"></select>
                </div>
            </div>
            <div class="col-md-10">
                <div class="form-group">
                    <label asp-for="EventTitle" class="control-label"></label>
                    <input asp-for="EventTitle" class="form-control" />
                    <span asp-validation-for="EventTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventDescription" class="control-label"></label>
                    <textarea asp-for="EventDescription" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="EventDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Evento change para o select de propriedades
        $('#PropertyId').change(function () {
            var propertyId = $(this).val(); // Obtém o ID da propriedade selecionada
            //console.log(propertyId);
            // Redireciona o usuário para a página de criação com o ID da propriedade na URL
            window.location.href = '/EventInProperties/Create/' + propertyId;
        });
    });
</script>