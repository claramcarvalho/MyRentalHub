<!-- _ConfirmationModal.cshtml -->

<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true" data-html="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Raw(ViewBag.ConfirmationMessage)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelButton">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmButton">Confirm</button>
            </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Event handler for Cancel button
        $('#cancelButton').click(function () {
            $('#confirmationModal').modal('hide'); // Hide the modal
        });

        // Event handler for Confirm button
        $('#confirmButton').click(function () {
            $('#confirmationModal').modal('hide'); // Hide the modal
            $('#confirmationStatus').val('true');
            // Trigger form submission
            $('form').submit();
        });
    });
</script>