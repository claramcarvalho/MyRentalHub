@model RentalProperties.UserAccount
@{
    ViewData["Title"] = "My Rental Hub";
    Layout = "_Layout_Login";
}

<h5>Are you a registered user? Login to access your account!</h5>
<br/>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        @if (ViewData["Message"] != null)
        {
            <div class="text-danger">
                @ViewData["Message"]
            </div>
        }
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserName" class="form-control" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="UserPassword"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="UserPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="UserPassword"></span>
            </div>
        </div>
        <div class="mb-3 row form-check">
            <div class="col-2">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                <label class="col-form-label" asp-for="RememberMe"></label>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>
<br/>
<span>If you don't have an account, click on SignUp on the menu to create an account as a potential tenant!</span>

